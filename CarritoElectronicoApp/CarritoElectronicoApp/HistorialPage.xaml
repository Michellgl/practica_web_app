<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarritoElectronicoApp.HistorialPage"
             Title="HistorialPage">
    <CollectionView x:Name="ListaHistorial">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10"
                   Padding="15"
                   CornerRadius="12"
                   HasShadow="True"
                   BackgroundColor="White">

                    <VerticalStackLayout>
                        <Label Text="{Binding Fecha}"
                           FontAttributes="Bold"/>
                        <Label Text="{Binding MetodoPago}"/>
                        <Label Text="{Binding Total, StringFormat='Total: ${0:F2}'}"
                           TextColor="Green"
                           FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>